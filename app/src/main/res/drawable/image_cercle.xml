<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/holo_blue_dark" />
            <stroke android:width="10dp" android:color="@android:color/white" />
            <corners android:radius="50dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <size android:height="100dp" android:width="100dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/bt_stroke_big" android:color="@android:color/white" />
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="@dimen/widget_radius" />
            <size android:height="@dimen/five_step" android:width="@dimen/five_step" />
        </shape>
    </item>

</selector>